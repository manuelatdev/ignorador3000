{
  "manifest_version": 3,
  "name": "Ignorador3000",
  "version": "1.1",
  "description": "Gestiona los mejores amigos.ðŸ« ",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "webNavigation"
  ],
  "host_permissions": [
    "https://forocoches.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://forocoches.com/foro/forumdisplay.php*",
        "https://forocoches.com/foro/showthread.php*",
        "https://forocoches.com/foro/profile.php?do=doaddlist*",
        "https://forocoches.com/foro/profile.php?do=doremovelist*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
